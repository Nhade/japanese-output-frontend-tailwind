{
  "name": "japanese-agent-app",
  "private": true,
  "version": "1.0.0",
  "description": "An agentic Japanese learning application",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "install:backend": "python -m pip install -r apps/backend/requirements.txt",
    "postinstall": "npm run install:backend",
    "dev:frontend": "npm run dev --prefix apps/frontend",
    "dev:backend": "python apps/backend/app.py",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}